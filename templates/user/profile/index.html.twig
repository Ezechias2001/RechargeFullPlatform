{% extends 'base.html.twig' %}

{% block title %} Profil {{app.user.FullName}}  {% endblock %}
 
{% block body %}
	{% include "__fragments/nav.html.twig" %}

	{% include "__fragments/headerAdmin.html.twig" %}

		<div class="container p-xxl-4">

			<!-- Title -->
			<div class="row">
				<div class="col-12 mb-0 mb-sm-2">
					<h1 class="h3 mb-0">Profil</h1>
				</div>
			</div>

			<div
				class="row g-4">
				<!-- Profile setting -->
				<div class="col-lg-6">
					<div class="card shadow">
						<div class="card-header border-bottom">
							<h5 class="card-header-title">Parametres</h5>
						</div>
						<div class="card-body">
						<form action="{{ path('app_modify') }}" method="POST">
							<!-- Full name -->
							<div class="mb-3">
								<label class="form-label">Nom Complet</label>
								<input name="fullName" type="text" class="form-control" value="{{app.user.FullName}}" placeholder="Name">
							</div>
							
							<!-- Mobile number -->
							<div class="mb-3">
								<label class="form-label">Telephone</label>
								<input type="text" name="telephone" class="form-control" value="{{app.user.PhoneNumber}}" placeholder="Enter your mobile number">
							</div>
							<!-- Birthday -->
							<div>
								<label class="form-label">Agence</label>
								<input type="text" name="agence" class="form-control" value="{{app.user.Agence}}">
							</div>
							<!-- Save button -->
							<div class="d-flex justify-content-end mt-4">
								<button type="submit"  class="btn btn-primary">Sauvegarder les modifications</button>
							</div>
						</div>
					
						</form>
					</div>
				</div>

				<!--Update Email-->
				<div class="col-lg-6">
					<div class="card border mb-3">
						<!-- Card header -->
						<div class="card-header border-bottom">
							<h4 class="card-header-title">Modifier email</h4>
							<p class="mb-0">Votre adresse e-mail actuelle est
								<span class="text-primary">{{app.user.email}}</span>
							</p>
						</div>

						<!-- Card body START -->
						<div class="card-body bg-light rounded-bottom rounded-7 p-4">
							<form action="{{ path('app_modify') }}" method="POST">
								<!-- Email -->
								<label class="form-label">Entrez votre nouvel identifiant de messagerie*<span class="text-danger">*</span>
								</label>
								<input type="email" name="email" class="form-control" placeholder="Entrez votre identifiant de messagerie*">

								<div class="text-end mt-3">
									<button type="submit" class="btn btn-primary mb-0">Enregistrer l'e-mail</button>
								</div>
							</form>
						</div>
						<!-- Card body END -->
					</div>

					<!-- Update Password  -->
					<div class="card border">
						<!-- Card header -->
						<div class="card-header border-bottom">
							<h4 class="card-header-title">Mettre Ã  jour le mot de passe</h4>
						</div>

						<!-- Card body START -->
						<form  action="{{ path('app_modify') }}" method="POST" class="card-body">
							<!-- Current password -->
							<div class="mb-3">
								<label class="form-label">Mot de passe actuel</label>
								<input  name="password" class="form-control" type="password" placeholder="Entrer le mot de passe actuel">
							</div>
							<!-- New password -->
							<div class="mb-3">
								<label class="form-label"> Entrez un nouveau mot de passe</label>
								<div class="input-group">
									<input name="newPassword" class="form-control fakepassword" placeholder="Entrez un nouveau mot de passe" type="password" id="psw-input">
									<span class="input-group-text p-0 bg-transparent">
										<i class="fakepasswordicon fas fa-eye-slash cursor-pointer p-2"></i>
									</span>
								</div>
							</div>
							<!-- Confirm -->
							<div class="mb-3">
								<label class="form-label">Confirmer le nouveau mot de passe</label>
								<input name="confirmPassword" class="form-control" type="password" placeholder="Confirmer le nouveau mot de passe">
							</div>

							<div class="text-end">
								<button type="submit" class="btn btn-primary mb-0">Changer le mot de passe</button>
							</div>
						</form>
						<!-- Card body END -->
					</div>
				</div>
			</div>
			<!-- Row END -->
		</div>
		<!-- Page main content END -->
	</div> 
{% endblock %}
