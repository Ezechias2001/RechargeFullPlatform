										<!-- Title -->
										<h1 class="mb-2 h3">Content de te revoir</h1>

										<!-- Form START -->
										<form method="post" class="mt-4 text-start">
											{% if error %}
												<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
											{% endif %}

											{% if app.user %}
												<div class="mb-3">
													Vous êtes connecté en tant que
													{{ app.user.userIdentifier }},
													<a href="{{ path('app_logout') }}">Se déconnecter</a>
												</div>
											{% endif %}

											<!-- Email -->
											<div class="mb-3">
												<label for="inputEmail" class="form-label">Entrez l'identifiant de messagerie Email</label>
												<input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus class="form-control">
											</div>
											<!-- Password -->
											<div class="mb-3 position-relative">
												<label for="inputPassword" class="form-label">Entrer le mot de passe</label>
												<input type="password" name="password" id="inputPassword" class="form-control fakepassword" autocomplete="current-password" required>
												<span class="position-absolute top-50 end-0 translate-middle-y p-0 mt-3">
													<i class="fakepasswordicon fas fa-eye-slash cursor-pointer p-2"></i>
												</span>
											</div>
											<input
											type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

											<!-- Button -->
											<div>
												<button type="submit" class="btn btn-primary w-100 mb-0">Se connecter</button>
											</div>
										</form>
                                        
